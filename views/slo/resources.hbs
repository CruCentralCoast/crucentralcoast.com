<div class="container top">
    <div class="box">
        <div class="text" id="housing">
            <p class="housing" id="line1">LOOKING FOR A ROOMMATE?</p>
            <p class="housing" id="line2">You're not the only one.</p>
            <p class="housing" id="line3">Check out the
                <a href="http://crucentralcoasthousing.lefora.com/" class="housing" target="_blank">HOUSING BOARD</a>
            </p>
        </div>
    </div>
    <div class="picture">
        <a href="construction">
            <p class="sermons">SERMONS & WEEKLY MEETINGS</p>
        </a>
    </div>
</div>
<div class="container bottom">
    <div class="shift">
        <div class="column resources" id="section1">
            <p class="headings">RECOMMENDED SITES</p>
            <div class="sites">
                {{#each links as |link|}}
                <a class="site-link" href="{{link.href}}" target="_blank">{{link.name}}</a>
                <p class="description">{{link.desc}}</p>
                {{/each}}
            </div>
        </div>
        <div class="column resources" id="section2">
            <p class="headings">GUIDES</p>
            <div class="guides">
                {{#each guides as |guide|}}
                <p class="subheadings">{{guide.type}}</p>
                {{#each guide.resources as |resource|}}
                <p class="links"><a class="links" href="{{resource.href}}" target="_blank">{{resource.name}}</a></p>
                {{/each}}
                {{/each}}
            </div>
        </div>
        <div class="column resources" id="section3">
            <p class="headings">DOWNLOAD NOW</p>
            <div class="downloads">
                {{#each downloads as |download|}}
                <p class="subheadings">{{download.type}}</p>
                {{#each download.resources as |resource|}}
                <p class="links"><a class="links" href="{{resource.href}}" target="_blank">{{resource.name}}</a></p>
                {{/each}}
                {{/each}}
            </div>
        </div>
    </div>
</div>